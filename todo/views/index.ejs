<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        *{
            padding: 0;
            margin: 0;
        }
        body{
            max-width: 500px;
            margin: 0 auto;
            padding: 20px 5px;
            font-family: Arial, Helvetica, sans-serif;
            background: #efefef;
        }
        .card{
            background: #fff;
            display: flex;
            flex-direction: row;
            height: 100px;
            margin-bottom: 20px;
        }
        .card-status{
            
            width: 12px;
            height: 100%;
        }
        .done{
            background: rgb(22, 243, 63);
        }
        .todo{
            background: rgb(253, 52, 52);
        }
        .card-body{
            display: flex;
            flex-direction: column;
            padding: 10px;
            width: 100%;
        }
        .card-head{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }
        .card-head-left{
            font-weight: bold;
        }
        .card-heal-right{
            display: flex;
            flex-direction: row;
            
        }
        .card-heal-right>div>a{
            margin-right: 5px;
            text-decoration: none;
        }
        .card-content{
            padding: 10px 0;
            font-size: 18px;
        }
        .update{
            color: blue;
        }
        .delete{
            color: red;
        }
    </style>
</head>
<body>
    <% todoList.forEach(function(todoRow){ %>
        <div class="card">
            <div class="card-status <%= todoRow.status ? 'done' : 'todo' %>"></div>
            <div class="card-body">
                <div class="card-head">
                    <div class="card-head-left">
                        <%= todoRow.id %>
                    </div>
                    <div class="card-heal-right">
                        <div>
                            <a class="update" href="/done/<%= todoRow.id %>">Done</a>
                        </div>
                        <div>
                            <a class="update" href="/update/<%= todoRow.id %>">Update</a>
                        </div>
                        <div>
                            <a class="delete" href="/delete/<%= todoRow.id %>">Delete</a>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <p>
                        <%= todoRow.text %>
                    </p>
                </div>
            </div>
       </div>
    <% }) %>
   
</body>
</html>